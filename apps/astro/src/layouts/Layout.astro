---
import SectionNavigation from '../components/section-navigation';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <SectionNavigation />
    <slot />
    <style>
      @font-face {
        font-family: 'DFDS-Light';
        src: url('/fonts/DFDS-Light.woff') format('woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'DFDS-Regular';
        src: url('/fonts/DFDS-Regular.woff') format('woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'DFDS-Bold';
        src: url('/fonts/DFDS-Reguler.woff') format('woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      html {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 10px;
        line-height: 1;
      }
      body {
        margin: 0;
      }
    </style>
  </body>
</html>
